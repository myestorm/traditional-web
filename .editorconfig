# 表明这是最顶层的配置文件，这样才会停止继续向上查找 .editorconfig 文件；
root = true

# Unix-style newlines with a newline ending every file 对于所有的文件  始终在文件末尾插入一个新行
end_of_line = lf
insert_final_newline = true

charset = utf-8

# 2 space indentation 控制文件类型的缩进大小
indent_style = space
indent_size = 2

# 是否除去换行行首的任意空白字符
trim_trailing_whitespace = true
